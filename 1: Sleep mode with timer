#include <avr/io.h>
#include <avr/interrupt.h>
#include <avr/sleep.h>
#include <util/delay.h>

ISR(TIMER1_COMPA_vect)
{
}

int main(void)
{
    // LED on Arduino digital pin 13
    DDRB |= (1 << PB5);

    TCCR1A = 0;                       //TCCR1B
    TCCR1B |= (1 << WGM12);         
    OCR1A = 15624;                    // 1second
    TCCR1B |= (1 << CS12) | (1 << CS10); 

    TIMSK1 |= (1 << OCIE1A);         

    sei();                            // global interrupts

    set_sleep_mode(SLEEP_MODE_IDLE);
    sleep_enable();

    while (1)
    {
        sleep_cpu(); 

        PORTB |= (1 << PB5);
        _delay_ms(100);
        PORTB &= ~(1 << PB5);
    }
}
